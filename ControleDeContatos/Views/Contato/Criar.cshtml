@{
    ViewData["Title"] = "Criar Contato";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Contato</h1>
</div>

<form>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome para Contato">
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" class="form-control" placeholder="Coloque seu email">
    </div>

    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" class="form-control" placeholder="Coloque o seu celular">
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secundary" asp-controller="Contato" asp-action="Index" role="button"></a>
</form>
       
   
